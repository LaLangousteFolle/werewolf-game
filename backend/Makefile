# Makefile

.PHONY: help lint format type-check install-dev

help:
	@echo "Commandes disponibles:"
	@echo "  make lint          - Linter Python (flake8, pylint)"
	@echo "  make format        - Formatter Python (black, isort)"
	@echo "  make type-check    - VÃ©rifier les types (mypy)"
	@echo "  make lint-front    - Linter frontend (ESLint)"
	@echo "  make format-front  - Formatter frontend (Prettier)"
	@echo "  make install-dev   - Installer les dÃ©pendances de dev"

# Python Backend + Bot
lint:
	@echo "ğŸ” Linting backend..."
	cd backend && flake8 .
	@echo "ğŸ” Linting discord-bot..."
	cd discord-bot && flake8 .

format:
	@echo "âœ¨ Formatting backend..."
	cd backend && black . && isort .
	@echo "âœ¨ Formatting discord-bot..."
	cd discord-bot && black . && isort .

type-check:
	@echo "ğŸ” Type checking backend..."
	cd backend && mypy .
	@echo "ğŸ” Type checking discord-bot..."
	cd discord-bot && mypy .

# Frontend
lint-front:
	@echo "ğŸ” Linting frontend..."
	cd frontend && npm run lint

format-front:
	@echo "âœ¨ Formatting frontend..."
	cd frontend && npm run format

# Installation
install-dev:
	@echo "ğŸ“¦ Installation des dÃ©pendances de dev..."
	cd backend && pip install black flake8 mypy isort pylint
	cd discord-bot && pip install black flake8 mypy isort pylint
	cd frontend && npm install -D eslint prettier

